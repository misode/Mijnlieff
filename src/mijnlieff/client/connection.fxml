<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="120.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mijnlieff.client.ConnectionEstablisher">
    <TextField fx:id="hostName" layoutX="14.0" layoutY="14.0" prefHeight="26.0" prefWidth="156.0" promptText="server host" />
    <TextField fx:id="portNumber" layoutX="183.0" layoutY="14.0" prefHeight="26.0" prefWidth="96.0" promptText="port" />
    <TextField fx:id="username" layoutX="14.0" layoutY="47.0" prefHeight="26.0" prefWidth="265.0" promptText="username" />
    <Button fx:id="joinButton" layoutX="14.0" layoutY="80.0" mnemonicParsing="false" onAction="#doJoin" text="Join" />
    <Label fx:id="loading" visible="false" layoutX="58.0" layoutY="84.0" text="Connecting..." />
</AnchorPane>
